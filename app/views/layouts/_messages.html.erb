
<div class="container">
  <% flash.each do |name, msg| %>
  <% type = case name%>
  <% when "alert" %>
  <%  "danger" %>
  <% when "notice" %>
  <%  "success" %>
  <% else %>
  <%  "success" %>
  <% end %>
      <div class="alert alert-<%= type %> alert-dismissible fade show" role="alert">
        <%= msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
        </button>
      </div>
  <% end %>
</div>